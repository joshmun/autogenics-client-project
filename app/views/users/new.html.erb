<div class="row">
  <div class="col-xs-1 column"></div>
  <div class="col-xs-10 column">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Create Account</h3>
      </div>
      <div class="panel-body">
        <form>
          <div class="form-group">
            <label for="user[full_name]">Full Name</label>
            <input type="text" class="form-control" id="user[full_name]" placeholder="full name...">
          </div>
          <div class="form-group">
            <label for="user[email]">Email</label>
            <input type="email" class="form-control" id="user[email]" placeholder="email...">
          </div>
          <div class="form-group">
            <label for="user[password]">Password</label>
            <input type="password" class="form-control" id="user[password]" placeholder="password...">
          </div>
          <div class="form-group">
            <label for="access_token">Access Token</label>
            <input type="text" class="form-control" id="access_token" placeholder="token...">
          </div>
          <button id="account-creation-submit" type="submit" class="btn btn-default">Create</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-xs-1 column"></div>
</div>
